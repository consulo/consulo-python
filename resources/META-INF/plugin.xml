<idea-plugin version="2" xmlns:xi="http://www.w3.org/2001/XInclude" url="http://confluence.jetbrains.com/display/PYH/">
	<id>org.consulo.python</id>
	<name>Python</name>
	<description>Smart editing for Python scripts</description>
	<version>3.0.1</version>
	<depends>org.consulo.java</depends>
	<depends>com.intellij.spellchecker</depends>
	<resource-bundle>com.jetbrains.python.PyBundle</resource-bundle>

	<vendor url="http://www.jetbrains.com/pycharm/">JetBrains, Keith Lea</vendor>

	<xi:include href="/META-INF/python-core.xml" xpointer="xpointer(/idea-plugin/*)"/>
	<xi:include href="/META-INF/python-plugin-core.xml" xpointer="xpointer(/idea-plugin/*)"/>

	<extensions defaultExtensionNs="com.intellij">
		<moduleExtensionProvider key="python" implementationClass="org.consulo.python.module.extension.PyModuleExtensionProvider"/>
		<moduleExtensionProvider key="py-buildout" parent-key="python" implementationClass="org.consulo.python.buildout.module.extension.BuildoutModuleExtensionProvider"/>
	</extensions>
</idea-plugin>
